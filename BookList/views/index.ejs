<%- include('partials/header.ejs'); -%>
        <% data.forEach(book => { %>
         
         <div class="container my-5 pb-2">
            <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
            <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                <h1 class="display-4 fw-bold lh-1 text-body-emphasis"><%= book.name %> </h1>
                <h3 class="display-6  lh-1 text-body-emphasis"><%= book.author %></h3>
                <p class="lead">"<%= book.opinion %> "</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                    <p class="alert alert-light px-4">Puntuacion: <%= book.score %>/10</p>
                    <p class="alert alert-light px-4">Leido: <%= book.read_date %></p>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
                <img class="rounded-lg-3" src="https://covers.openlibrary.org/b/ISBN/<%= book.photoid %>-M.jpg" alt="" width="200">
            </div>
            </div>
        </div>
        <% }) %>
        
        
        

<%- include('partials/footer.ejs'); -%>